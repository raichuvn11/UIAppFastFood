<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/passwordChangedLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#646464">

    <!-- Bottom Sheet -->
    <LinearLayout
        android:id="@+id/bottomSheetLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/bottom_sheet_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Thanh kéo -->
        <View
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:background="#CCCCCC"
            android:alpha="0.6"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@android:color/darker_gray"
            android:clipToOutline="true"/>

        <!-- Hình ảnh minh họa -->
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_success"
            android:contentDescription="Success Icon"
            android:layout_marginBottom="16dp"/>

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đã thay đổi mật khẩu"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/inter_semibold"/>

        <!-- Nội dung thông báo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Mật khẩu thay đổi thành công, bạn có thể đăng nhập với mật khẩu mới"
            android:textSize="18sp"
            android:textColor="#777777"
            android:textAlignment="center"
            android:fontFamily="@font/inter_18pt_medium"/>

        <!-- Nút xác nhận -->
        <Button
            android:id="@+id/btnVerifyAccount"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:text="Tiếp tục"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF9800"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
